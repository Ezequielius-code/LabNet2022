@model List<Practica.EF.MVC.Models.SuppliersViewModel>

@{
    ViewBag.Title = "Suppliers";
}

<h1>Suppliers Index</h1>
@if (Model.Count() > 0)
 {
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Company Name</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Phone</th>
                <th scope="col">Contact</th>
                <th scope="col">Modify</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <th scope="row">@supplier.SupplierId</th>
                    <td>@supplier.CompanyName</td>
                    <td>@supplier.City</td>
                    <td>@supplier.Country</td>
                    <td>@supplier.Phone</td>
                    <td>@supplier.ContactName</td>
                    <td>@Html.ActionLink("Update Register", "Update", new { id = supplier.SupplierId})</td>
                    <td>@Html.ActionLink("Delete Register", "Delete", new { id = supplier.SupplierId }, new { onclick = "return confirm('Are you sure to delete?')" })</td>
                </tr>
            }
        </tbody>
    </table>
 }
 else 
 {
    <h2>Sorry! We are out of suppliers now.</h2>
 }

<div>
    @Html.ActionLink("Insert view", "Insert")
</div>
